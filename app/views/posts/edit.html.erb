<div id="header">
  <p class="main-title">Meu Blog</p>
  <p class="text-muted">Bem-vindo ao meu blog pessoal!</p>
</div>

<div id="main-container">
  <h1>Editar Post</h1>

  <%= form_with model: @post do |form| %>
    <div>
      <%= form.label :title, "Título" %><br>
      <%= form.text_field :title, value: @post.title %>
    </div>

    <div>
      <%= form.label :content, "Conteúdo" %><br>
      <%= form.text_area :content, value: @post.content %>
    </div>

    <div>
      <%= form.submit "Salvar Alterações" %>
    </div>
  <% end %>

  <p>____________________</p><br />

  <%= link_to 'Cancelar', post_path(@post), class: 'button-primary' %>
</div>
